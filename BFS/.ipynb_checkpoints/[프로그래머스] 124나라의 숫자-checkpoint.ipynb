    "def solution(n):\n",
    "  answer = ''\n",
    "  while n:\n",
    "    if n % 3:\n",
    "      answer += str(n % 3)\n",
    "      n //= 3\n",
    "    else:\n",
    "      answer += '4'\n",
    "      n = n//3 - 1\n",
    "\n",
    "\n",
    "  return answer[::-1]"
   ]
  }
